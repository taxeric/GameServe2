<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.lanier.gameserve2.mapper.BackpackMapper">

    <resultMap id="baseResultMap" type="org.lanier.gameserve2.entity.Prop">
        <id column="id" property="bpkId"/>
        <result column="real_prop_id" property="realPropId"/>
        <result column="type" property="type"/>
    </resultMap>

    <select id="getProp" resultMap="baseResultMap">
        select id from prop where type=#{propType} and real_prop_id=#{propId}
    </select>

    <insert id="addProp">
        insert into prop (type, real_prop_id) values (#{propType},#{propId})
    </insert>
</mapper>